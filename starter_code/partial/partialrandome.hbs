<div class="col-3">
<img class="card-img-top imgbeers-Ran" src="{{this.image_url}}" alt="Card image cap">
</div>
<div class="col-6">
      <div class="card-body">
        <h5 class="card-title">{{this.name}}</h5>
        <p class="card-text">{{this.tagline}}</p>
        <p class="card-text">{{this.description}}</p>
        <h3>Food Pairing</h3>
        <ul >
             {{#each this.food_pairing}}
            <li>{{this}}</li>
            {{/each}}
           
        </ul>
        <p> <strong>Brewers Tips:</strong> {{this.brewers_tips}}</p>
      </div>
</div>